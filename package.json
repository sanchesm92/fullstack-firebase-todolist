{
  "name": "fullstack-todo-list",
  "version": "1.0.0",
  "description": "FullStack todolist built with Node.js, Typescript, firebase, javascript, nextjs, tailwind",
  "main": "index.js",
  "scripts": {
    "test:functional": "jest --projects ./test --runInBand",
    "build": "tsc",
    "frontend:dev": "cd src/frontend && npm run dev",
    "frontend": "cd src/frontend && npm run build %% npm run dev",
    "start": "npm run build && node dist/src/backend/index.js",
    "start:dev": "ts-node-dev 'src/backend/index.ts'",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "tsc": "tsc",
    "postinstall": "npm run tsc"
  },
  "author": "Felipe Sanches Meirelles",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanchesm92/fullstack-firebase-todolist"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/jest": "^28.1.8",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.7.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "jest": "^28.1.3",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "firebase": "^9.9.3",
    "joi": "^17.6.0",
    "module-alias": "^2.2.2"
  }
}
