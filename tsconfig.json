{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },
    "rootDirs": [
      "./src",
      "./test"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true 
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
, "src/frontend/firebase.js"  ],
  "exclude": [
    "./node_modules/*",
    "dist",
    "coverage",
    "node_modules",
    "tests"
  ] 
}